<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.2.xsd"
        default-menu-title="登录账号管理">

    <transition name="createUserAccount">
        <service-call name="create#UserAcount"/>
        <default-response url="."/>
    </transition>

    <transition name="createUserAccount_test">
        <service-call name="usermanage.UserAccountServices.create#UserAccount"/>
        <default-response url="."/>
    </transition>

    <transition name="editUserAccount">
        <default-response url="../EditUserAccount"/>
    </transition>

    <actions>
        <if condition="context.renderMode == 'json'">
            <entity-find entity-name="UserAccount" list="listUserAccount">
                <search-form-inputs/>
            </entity-find>
            <log level="info" message="===============${context}"/>
            <log level="info" message="中文" />
        </if>
        <script>hide = ec.user.hasPermission("perminssion_id_test")</script>
        <log level="info" message="=============== hide: ${hide}"/>
    </actions>

    <widgets>

        <form-single name="FindUserAccount">
            <!-- <field name="tutorialId"><default-field><text-find/></default-field></field>
                -->
            <auto-fields-entity entity-name="UserAccount" field-type="find"/>
            <field name="searchButton"><default-field title="Find"><submit style="btn-primary" for="ListUserAccount"/></default-field></field>
        </form-single>

        <toolbar id="toolbarUserAccount">
            <button-group>
                <button style="btn-small" click="dataTablesSelectAll('ListUserAccount')">全选</button>
                <button style="btn-small" click="dataTablesReverseSelect('ListUserAccount')">反选</button>
            </button-group>

            <button-group>
                <!--<menu name="test2" title="测试2" down-arrow="true">-->
                    <!--<menu-item name="item1" transition="createUserAccount"></menu-item>-->
                    <!--<menu-item name="item2" transition="createUserAccount"></menu-item>-->
                <!--</menu>-->
                <button style="btn-small" click="ListUserAccount.submit()" validchecked="1">修改</button>
            </button-group>
        </toolbar>
        <form-list name="ListUserAccount" list="listUserAccount" render="{'type':'dataTables', 'selectMode':'single', 'toolbar': 'toolbarUserAccount'}">
            <row-actions>
                <set field="checkbox" from="userId"/>

            </row-actions>
            <field name="checkbox" style="th-checkbox">
                <header-field title="" show-order-by="false"></header-field>
                <default-field title=""><check></check></default-field>
            </field>
            <!--<auto-fields-entity entity-name="UserAccount" field-type="display"/>-->
            <!--<field name="userId">-->
                <!--<default-field><display></display></default-field>-->
            <!--</field>-->
            <field name="username">
                <default-field><link url="editUserAccount" text="${username}"/></default-field>
            </field>
            <field name="emailAddress">
                <default-field><display /></default-field>
            </field>
            <field name="userFullName">
                <default-field><display></display></default-field>
            </field>
            <field name="disabled">
                <default-field><display></display></default-field>
            </field>
            <field name="lastUpdatedStamp" hide="true"><default-field><display/></default-field></field>
            <!-- <field name="operateMenu" style="th-operate-menu"><default-field title="操作"><menu transition="menu"/></default-field></field> -->
        </form-list>
        <!--<container style="clearfix"></container>-->
        <container-dialog id="CreateUserAccountDialog" button-text="建立新账号" style="btn-primary">
            <form-single name="CreateTutorial" transition="createUserAccount">
                <auto-fields-entity entity-name="Tutorial" field-type="edit"/>
                <field name="tutorialId" validate-parameter="aaa" validate-service="tutorial.TutorialServices.respondDataTables">
                    <default-field>
                        <text-line />
                    </default-field>
                </field>
                <field name="submitButton">
                    <default-field title="Create"><submit/></default-field>
                </field>
            </form-single>
        </container-dialog>
    </widgets>
</screen>